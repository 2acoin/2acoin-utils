{
  "name": "turtlecoin-utils",
  "version": "3.0.0",
  "description": "A Node.js collection of utilities useful for TurtleCoin developers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*",
    "config.json"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "./node_modules/.bin/tsc",
    "docs": "./node_modules/.bin/typedoc && touch docs/.nojekyll",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run docs",
    "style": "./node_modules/.bin/eslint src/**/*.ts src/*.ts test/*.ts",
    "fix-style": "./node_modules/.bin/eslint --fix src/**/*.ts src/*.ts test/*.ts",
    "test": "npm run style && npm run build && npm run test-node && npm run test-js",
    "mocha": "./node_modules/.bin/mocha",
    "test-node": "./node_modules/.bin/mocha --require ts-node/register test/test.ts",
    "test-js": "env FORCE_JS=1 ./node_modules/.bin/mocha --require ts-node/register test/test.ts"
  },
  "keywords": [
    "TurtleCoin",
    "Utilities"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/turtlecoin/turtlecoin-utils.git"
  },
  "homepage": "https://utils.turtlecoin.dev",
  "bugs": {
    "url": "https://github.com/turtlecoin/turtlecoin-utils/issues"
  },
  "author": "Brandon Lehmann <brandonlehmann@gmail.com>",
  "contributors": [
    "zpalmtree <22151537+zpalmtree@users.noreply.github.com>"
  ],
  "license": "GPL-3.0",
  "dependencies": {
    "@ledgerhq/hw-transport": "^5.19.1",
    "aes-js": "^3.1.2",
    "big-integer": "^1.6.48",
    "bytestream-helper": "0.0.8",
    "get-random-values": "^1.2.0",
    "numeral": "^2.0.6",
    "turtlecoin-base58": "^0.0.6",
    "turtlecoin-crypto": "^5.0.0",
    "turtlecoin-mnemonics": "^0.0.6"
  },
  "devDependencies": {
    "@types/aes-js": "^3.1.1",
    "@types/ledgerhq__hw-transport": "^4.21.2",
    "@types/mocha": "^8.0.0",
    "@types/node": "^13.13.15",
    "@types/numeral": "0.0.26",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.5.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^8.0.1",
    "ts-node": "^8.10.2",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.7"
  }
}
